!Xft.antialias:  1
!Xft.autohint:   0
!Xft.dpi:        96
!Xft.hinting:    1
!Xft.hintstyle:  hintfull
!Xft.lcdfilter:  lcddefault
!Xft.rgba:       rgb

rofi.modi: run,drun,window,ssh
rofi.color-enabled: true
rofi.color-window: #273238, #273238, #1e2529
rofi.color-normal: #273238, #c1c1c1, #273238, #394249, #ffffff
rofi.color-active: #273238, #80cbc4, #273238, #394249, #80cbc4
rofi.color-urgent: #273238, #ff1844, #273238, #394249, #ff1844
rofi.font: Inconsolata 14

! note: rxvt-unicode-pixbuf package required
!       for icon support and letter space fix
URxvt.depth: 32
!URxvt.font: xft:Terminus:size=10
URxvt.font: xft:Inconsolata:size=10
!URxvt*iconFile: /home/aldn/.local/share/icons/Matrilineare/apps/scalable/Terminal.svg
URxvt.letterSpace: 0
! scrollbar style - rxvt (default), plain (most compact), next, or xterm
URxvt.scrollstyle: plain
! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
! move a word on Ctrl-arrow
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C
! colors
URxvt*background: rgb:12/12/12
URxvt*foreground: rgb:e0/e0/e0
URxvt*color0: black
URxvt*color1: red3
URxvt*color2: green3
URxvt*color3: yellow3
URxvt*color4: blue2
URxvt*color5: magenta3
URxvt*color6: cyan3
URxvt*color7: gray90
URxvt*color8: grey50
URxvt*color9: red
URxvt*color10: green
URxvt*color11: yellow
! xterm "blue"
URxvt*color12: rgb:5c/5c/ff
URxvt*color13: magenta
URxvt*color14: cyan
URxvt*color15: white

